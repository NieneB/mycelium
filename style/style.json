{
    "version": 8,
    "name": "data",
    "glyphs": "https://ta.webmapper.nl/stb/achtergrond/glyphs/{fontstack}/{range}.pbf",
    "sprite": "https://github.com/NieneB/mycelium/blob/master/sprite/sprite",
    "sources": {
        "pdok": {
            "type": "vector",
            "url": "https://github.com/NieneB/mycelium/blob/master/style/tile.json"
        },
        "punten":{
            "type": "geojson",
             "data": "https://github.com/NieneB/mycelium/blob/master/geojson/points.geojson"
        }
    },
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint":{
                "background-pattern": "ruitjes_1",
                "background-opacity": 0.5
            }
        },
        {
            "id": "terrein_lijn",
            "source": "pdok",
            "source-layer": "terrain",
            "type": "line",
            "filter": ["in", "lod1",
                "natural"
            ],
            "minzoom": 0,
            "maxzoom": 22,
            "paint": {
                "line-color": "#4e6618",
                "line-width": 2,
                "line-blur": 1,
                "line-offset": 0
            }
        },
        {
            "id": "terrein_z0",
            "source": "pdok",
            "source-layer": "terrain",
            "type": "fill",
           "filter": [
            "in",
            "lod1",
            "natural"
        ],
            "minzoom": 0,
            "maxzoom": 22,
            "paint": {
                "fill-color":  "#8ab42a",
                "fill-outline-color": "rgba(0,0,0,0)",
                "fill-opacity": 0.95
            }
        },
        {
            "id": "water-shadow",
            "source": "pdok",
            "source-layer": "water",
            "type": "line",
            "paint": {
                "line-color": "#535353",
                "line-width": 2,
                "line-offset": -1,
                "line-blur": 2
            }
        },
        {
            "id": "water",
            "source": "pdok",
            "source-layer": "water",
            "type": "fill",
            "layout": {
                "visibility": "visible"
            },
            "paint": {
                "fill-pattern": "water_1",
                "fill-opacity": 0.9
            }
        },
        {
            "id": "punten",
            "source": "punten",
            "type": "circle",
            "layout": {
                "visibility": "none"
            },
            "paint":{
                "circle-color" :[
                    "match",
                    [
                        "get",
                        "thema"
                    ],
                    "onverwacht",
                    "#000eee",
                    "ontmoeting",
                    "#ee00ee",
                    "dier",
                    "#eee000",
                    "#000000"
                ],
                "circle-radius": 5
            }
        }
    ]
}
