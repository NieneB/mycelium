{
    "version": 8,
    "name": "data",
    "glyphs": "https://ta.webmapper.nl/stb/achtergrond/glyphs/{fontstack}/{range}.pbf",
    "sprite": "http://localhost:8080/sprite/sprite",
    "sources": {
        "webmapper": {
            "type": "vector",
            "url": "http://localhost:8080/style/tile.json"
        },
        "punten":{
            "type": "geojson",
             "data": "http://localhost:8080/geojson/points.geojson"
        }
    },
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint":{
                "background-pattern": "ruitjes_1"
            }
        },
                {
                    "id": "terrein_lijn",
                    "source": "webmapper",
                    "source-layer": "terrein",
                    "type": "line",
                    "filter": ["in", "typelandgebruik",
                        "akkerland",
                        "boomgaard",
                        "boomkwekerij",
                        "dodenakker",
                        "dodenakker met bos",
                        "fruitkwekerij",
                        "grasland",
                        "populieren",
                        "bos: gemengd bos",
                        "bos: griend",
                        "bos: loofbos",
                        "bos: naaldbos",
                        "bos"
                    ],
                    "minzoom": 0,
                    "maxzoom": 22,
                    "paint": {
                        "line-color": "#4e6618",
                      "line-width": 3,
                       "line-blur": 3
                    }
                },
        {
            "id": "terrein_z0",
            "source": "webmapper",
            "source-layer": "terrein",
            "type": "fill",
            "filter": [
                "in",
                "typelandgebruik",
                "akkerland",
                "boomgaard",
                "boomkwekerij",
                "dodenakker",
                "dodenakker met bos",
                "fruitkwekerij",
                "grasland",
                "populieren",
                "bos: gemengd bos",
                "bos: griend",
                "bos: loofbos",
                "bos: naaldbos",
                "bos"
            ],
            "minzoom": 0,
            "maxzoom": 22,
            "paint": {
                "fill-color":  "#8ab42a",
                "fill-outline-color": "rgba(0,0,0,0)",
                "fill-opacity": 0.95
            }
        },
        {
            "id": "water-shadow",
            "source": "webmapper",
            "source-layer": "water",
            "type": "line",
            "paint": {
                "line-color": "#535353",
                "line-width": 4,
                "line-offset": -1,
                "line-blur": 3
            }
        },
        {
            "id": "water",
            "source": "webmapper",
            "source-layer": "water",
            "type": "fill",
            "paint": {
                "fill-color": "#dcdcdc",
                "fill-opacity": 1,
                "fill-outline-color": "rgba(0,0,255,0)"
            }
        },
        {
            "id": "water-line",
            "source": "webmapper",
            "source-layer": "water",
            "type": "line",
            "paint": {
                "line-color": "#dcdcdc",
                "line-width": 1,
                "line-offset": 2
            }
        },
        {
            "id": "punten",
            "source": "punten",
            "type": "circle",
            "paint":{
                "circle-color" :[
                    "match",
                    [
                        "get",
                        "thema"
                    ],
                    "onverwacht",
                    "#000eee",
                    "ontmoeting",
                    "#ee00ee",
                    "dier",
                    "#eee000",
                    "#000000"
                ],
                "circle-radius": 5
            }
        }
    ]
}
