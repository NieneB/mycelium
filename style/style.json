{
    "version": 8,
    "name": "data",
    "glyphs": "https://ta.webmapper.nl/stb/achtergrond/glyphs/{fontstack}/{range}.pbf",
    "sprite": "https://raw.githubusercontent.com/NieneB/mycelium/master/sprite/sprite_4",
    "sources": {
        "pdok": {
            "type": "vector",
            "scheme": "xyz",
            "tiles":["https://geodata.nationaalgeoregister.nl/beta/topotiles/{z}/{x}/{y}.pbf"]
        },
        "punten":{
            "type": "geojson",
             "data": "https://raw.githubusercontent.com/NieneB/mycelium/master/geojson/points.geojson"
        },
        "geojson_locaties": {
            "type": "geojson",
            "data": "https://raw.githubusercontent.com/NieneB/mycelium/master/geojson/locations.geojson"
        }
    },
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint":{
                "background-pattern": "ruitjes_1",
                "background-opacity": 0.5
            }
        },
        {
            "id": "cirles",
            "source": "geojson_locaties",
            "type": "circle",
            "minzoom": 0,
            "maxzoom": 22,
            "paint": {
               "circle-color": "#553333",
               "circle-radius":  200,
               "circle-opacity": 0.1
            }
        },
        {
            "id": "terrein_lijn",
            "source": "pdok",
            "source-layer": "terrain",
            "type": "line",
            "filter": ["in", "lod1",
                "natural"
            ],
            "minzoom": 0,
            "maxzoom": 22,
            "layout": {
                "visibility": "none"
            },
            "paint": {
                "line-color": "#4e6618",
                "line-width": 2,
                "line-blur": 1,
                "line-offset": 0,
                "line-opacity": 0
            }
        },
        {
            "id": "terrain-shadow",
            "source": "pdok",
            "source-layer": "terrain",
            "type": "line",
            "filter": [
                "in",
                "lod1",
                "natural"
            ],
            "paint": {
                "line-color": "#535353",
                "line-width": 0,
                "line-translate": [
                    1,
                    2
                ],
                "line-blur": 3
            }
        },
        {
            "id": "water-shadow",
            "source": "pdok",
            "source-layer": "water",
            "type": "line",
            "paint": {
                "line-color": "#535353",
                "line-width": 0,
                "line-translate": [
                    2,
                    2
                ],
                "line-blur": 3
            }
        },
        {
            "id": "terrein_z0",
            "source": "pdok",
            "source-layer": "terrain",
            "type": "fill",
           "filter": [
            "in",
            "lod1",
            "natural"
        ],
        "layout": {
            "visibility": "none"
        },
            "minzoom": 0,
            "maxzoom": 22,
            "paint": {
                "fill-pattern":  "structure_1",
                "fill-opacity": 1
            }
        },

        {
            "id": "water",
            "source": "pdok",
            "source-layer": "water",
            "type": "fill",
            "layout": {
                "visibility": "visible"
            },
            "paint": {
                "fill-pattern": "black_1",
                "fill-opacity": 1
            }
        },
        {
            "id": "punten",
            "source": "punten",
            "type": "symbol",
                        "filter": [
                            "!=",
                            "thema",
                            "ontmoeting"
                        ],
                        
            "layout": {
                "visibility": "visible",
                "icon-image": "icon_1",
                "icon-size": 0.7,
                "icon-allow-overlap": true
            },
            "paint": {
                "icon-opacity": 0.8

            }
        },
        {
            "id": "punten_@",
            "source": "punten",
            "type": "symbol",
            "filter": ["==","thema","ontmoeting"],
            "layout": {
                "visibility": "visible",
                "icon-image": "icon_2",
                "icon-size": 0.7,
                "icon-allow-overlap": true
            },
            "paint": {
                "icon-opacity": 0.8
            }
        }
       
    ]
}
