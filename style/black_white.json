{
    "version": 8,
    "name": "data",
    "glyphs": "https://ta.webmapper.nl/stb/achtergrond/glyphs/{fontstack}/{range}.pbf",
    "sprite": "http://localhost:8080/sprite/sprite_2",
    "sources": {
        "pdok": {
            "type": "vector",
            "scheme": "xyz",
            "tiles":["http://geodata.nationaalgeoregister.nl/beta/topotiles/{z}/{x}/{y}.pbf"]
        },
        "punten":{
            "type": "geojson",
             "data": "https://raw.githubusercontent.com/NieneB/mycelium/master/geojson/points.geojson"
        }
    },
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint":{
                "background-color": "#e4e4e4",
                "background-opacity": 0.9
            }
        },
        {
            "id": "water-shadow",
            "source": "pdok",
            "source-layer": "water",
            "type": "line",
            "paint": {
                "line-color": "#535353",
                "line-width": 3,
                "line-translate": [
                    2,
                    2
                ],
                "line-blur": 3
            }
        },
        {
            "id": "terrain-shadow",
            "source": "pdok",
            "source-layer": "terrain",
            "type": "line",
            "filter": [
                "in",
                "lod1",
                "natural"
            ],
            "paint": {
                "line-color": "#535353",
                "line-width": 3,
                "line-translate": [
                    2,
                    2
                ],
                "line-blur": 3
            }
        },
        {
            "id": "terrain-shadow",
            "source": "pdok",
            "source-layer": "terrain",
            "type": "line",
            "filter": [
                "in",
                "lod1",
                "natural"
            ],
            "paint": {
                "line-color": "#535353",
                "line-width": 0,
                "line-translate": [
                    1,
                    2
                ],
                "line-blur": 3
            }
        },
        {
            "id": "water-shadow",
            "source": "pdok",
            "source-layer": "water",
            "type": "line",
            "paint": {
                "line-color": "#535353",
                "line-width": 0,
                "line-translate": [
                    2,
                    2
                ],
                "line-blur": 3
            }
        },
        {
            "id": "water",
            "source": "pdok",
            "source-layer": "water",
            "type": "fill",
            "layout": {
                "visibility": "visible"
            },
            "paint": {
                "fill-color": "#f2f2f2",
                "fill-opacity": 1
            }
        },
        {
            "id": "terrein_z0",
            "source": "pdok",
            "source-layer": "terrain",
            "type": "fill",
            "filter": [
                "in",
                "lod1",
                "natural"
            ],
            "minzoom": 0,
            "maxzoom": 22,
            "paint": {
                "fill-color":  "#C6D1C8",
                "fill-opacity": 1
        }
        },
        {
            "id": "punten",
            "source": "punten",
            "type": "circle",
            "layout": {
                "visibility": "visible"
            },
            "paint":{
                "circle-color" :[
                    "match",
                    [
                        "get",
                        "thema"
                    ],
                    "onverwacht",
                    "#000000",
                    "ontmoeting",
                    "#000000",
                    "dier",
                    "#000000",
                    "#000000"
                ],
                "circle-radius": 7,
                "circle-blur": 1
            }
        },
        {
            "id": "test",
            "source": "pdok",
            "source-layer": "infra",
            "type": "line",
            "layout": {
                "visibility": "none"
            },
            "paint": {
                "line-pattern":"lijn_1",
                "line-width": 4
            }
        }
    ]
}
