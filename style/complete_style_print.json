{
    "version": 8,
    "name": "data",
    "glyphs": "https://ta.webmapper.nl/stb/achtergrond/glyphs/{fontstack}/{range}.pbf",
    "sprite": "https://raw.githubusercontent.com/NieneB/mycelium/master/sprite/sprite_4",
    "sources": {
        "pdok": {
            "type": "vector",
            "scheme": "xyz",
            "tiles":["https://geodata.nationaalgeoregister.nl/beta/topotiles/{z}/{x}/{y}.pbf"]
        },
        "punten":{
            "type": "geojson",
            "data": "https://raw.githubusercontent.com/NieneB/mycelium/master/geojson/points.geojson"
        },
        "geojson_locaties": {
            "type": "geojson",
            "data": "https://raw.githubusercontent.com/NieneB/mycelium/master/geojson/locations.geojson"
        },
        "geojson_lines": {
            "type": "geojson",
            "data": "https://raw.githubusercontent.com/NieneB/mycelium/master/geojson/mycelium-segmentized.geojson"
        }
    },
    "layers": [
        {
            "id": "background",
            "type": "background",
            "paint":{
                "background-pattern": "ruitjes_1",
                "background-opacity": 0.5
            }
        },
        {
            "id": "terrein",
            "source": "pdok",
            "source-layer": "terrain",
            "type": "circle",
            "filter": [
                "in",
                "lod1",
                "natural"
            ],
            "layout": {
                "visibility": "visible"
            },
            "minzoom": 0,
            "maxzoom": 22,
            "paint": {
                "circle-color": "#8cb528",
                "circle-opacity": 0.1,
                "circle-radius": [
                    "interpolate",
                    [
                        "linear"
                    ],
                    [
                        "zoom"
                    ],
                    11,
                    5,
                    12,
                    8,
                    14,
                    10,
                    20,
                    15
                ]
            }
        }, 
        {
            "id": "cirles",
            "source": "geojson_locaties",
            "type": "circle",
            "minzoom": 0,
            "maxzoom": 22,
            "paint": {
                "circle-color": "#553333",
                "circle-radius": [
                    "interpolate",
                    [
                        "linear"
                    ],
                    [
                        "zoom"
                    ],
                    8,
                    20,
                    12,
                    150,
                    13,
                    200,
                    14,
                    250,
                    15,
                    550,
                    16,
                    1000
                ],
                "circle-opacity": 0.1
            }
        },
        {
            "id": "terrein_lijn",
            "source": "pdok",
            "source-layer": "terrain",
            "type": "line",
            "filter": ["in", "lod1",
                "natural"
            ],
            "minzoom": 0,
            "maxzoom": 22,
            "layout": {
                "visibility": "visible"
            },
            "paint": {
                "line-color": "#ffffff",
                "line-width": 1,
                "line-blur": 1,
                "line-offset": 0,
                "line-opacity": 0.7
            }
        },
        {
            "id": "water",
            "source": "pdok",
            "source-layer": "water",
            "type": "fill",
            "layout": {
                "visibility": "visible"
            },
            "paint": {
                "fill-pattern": "black_1",
                "fill-opacity": 1
            }
        },
        {
            "id": "geojson-shadow",
            "type": "line",
            "source": "geojson_lines",
            "layout": {
                "line-join": "round",
                "line-cap": "round"
            },
            "paint": {
                "line-translate": [
                    3,
                    3
                ],
                "line-color": "#535353",
                "line-opacity": 0.2,
                "line-width": ["interpolate",
                    ["cubic-bezier",
                        0.42,
                        0,
                        0.5,
                        0.7
                    ],
                    ["get", "distance"
                    ],
                    0,
                    7.5,
                    "meters",
                    0
                ],
                "line-blur": 5
            }
        },
        {
            "id": "geojson",
            "type": "line",
            "source": "geojson_lines",
            "layout": {
                "line-join": "round",
                "line-cap": "round"
            },
            "paint": {
                "line-opacity": 0.8,
                "line-width": ["interpolate",
                    ["cubic-bezier",
                        0.42,
                        0,
                        0.5,
                        0.7
                    ],
                    ["get", "distance"
                    ],
                    0,
                    7.5,
                    "meters",
                    0
                ],
                "line-blur": 5,
                "line-pattern": "lijn_4"
            }
        },
        {
            "id": "punten",
            "source": "punten",
            "type": "symbol",
            "layout": {
                "visibility": "visible",
                "icon-image": "icon_1",
                "icon-size":[
                    "interpolate",
                    [
                        "linear"
                    ],
                    [
                        "zoom"
                    ],
                    11,
                    0.01,
                    12,
                    0.4,
                    13,
                    0.7,
                    14,
                    0.9,
                    16,1
                ],
                "icon-allow-overlap": true
            },
            "paint": {
                "icon-opacity": 0.8
            }
        }
        
    ]
}
